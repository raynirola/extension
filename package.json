  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raynirola/extension.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "dev:styles": "tailwindcss --output src/styles/app.css --watch",
    "build:styles": "tailwindcss --output src/styles/app.css --minify",
    "build": "tailwindcss --minify --output src/styles/app.css && tsc && vite build",
    "format": "prettier --write ."
